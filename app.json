{
  "expo": {
    "name": "DebtTracker",
    "slug": "debt-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.debttracker.app",
      "infoPlist": {
        "NSCalendarsUsageDescription": "L'application a besoin d'accéder à votre calendrier pour synchroniser vos séances de sport.",
        "NSRemindersUsageDescription": "L'application utilise les rappels pour vous notifier des séances à venir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.debttracker.app",
      "permissions": [
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "SCHEDULE_EXACT_ALARM"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-calendar",
        {
          "calendarPermission": "L'application a besoin d'accéder à votre calendrier pour synchroniser vos séances de sport."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ]
  }
}
